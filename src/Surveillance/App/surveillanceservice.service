[Unit]
Description=RedDeer Surveillance Service
DefaultDependencies=yes
Wants=network.target
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/dotnet /reddeer/surveillanceservice/RedDeer.Surveillance.App.dll --systemd-service
SyslogIdentifier=reddeer-surveillanceservice
Restart=on-failure
RestartSec=5
User=reddeer
Group=reddeer

[Install]
WantedBy=multi-user.target
